                                      <%- comment.created_at %>
                                    </div>
                                  </div>
                                  <div class="extra text">
                                      <%- comment.comment %>
                                  </div> 
                              </div>
                          <% }}%>
                        <form  method="post">
                           
                            <div class="ui form">
                                <div class="field">
                                    <label for="name">Name :</label>
                                    <input type="text" id="name" name="userName">
                                </div>
                                <div class="field">
                                    <label for="msg">Message :</label>
                                    <textarea id="msg" name="comment"></textarea>
                                </div>
                                <button class="ui secondary button">SEND</button>
                            </div>  
                    </form>
                      
