    <% if(locals.message) { %>
        <div class="ui green message">
            <%- message %>
        </div>
        <% } %>
            <% if(locals.ErrMessage) { %>
                <div class="ui red message">
                    <%- ErrMessage %>
                </div>
                <% } %>
                    <% if(locals.recettes) { for(recette of recettes) { %>
                        <div>
                            <h1>
                                <%- recette.text %>
                            </h1>
                            <h2>
                                <%- recette.ingredients %>
                            </h2>
                            <h3>
                                <%- recette.title %>
                            </h3>
                            <img src="/img/<%- recette.image %>" />
                            
                        </div>
                        <% } } %>
                        <% if(locals.comments) { for(comment of comments) {%>
