<%- include('./connexion/admin.ejs') %>
    <% if(locals.message) { %>
        <div class="ui green message">
            <%- message %>
        </div>
        <% } %>
            <% if(locals.ErrMessage) { %>
                <div class="ui red message">
                    <%- ErrMessage %>
                </div>
                <% } %>

                    <div>
                        <form action="/recettes" method="post" enctype="multipart/form-data">
                            <div class='ui form'>
                                <div class="field">
                                    <label>Title *</label>
                                    <input type="text" name='title'>
                                </div>
                                <div class="field">
                                    <label>Image *</label>
                                    <input type="file" name ="image" />
                                </div>
                                <div class="field">
                                    <label>Ingrédients *</label>
                                    <input type="text" name='ingredients'>
                                </div>
                                <div>
                                    <h3>Préparation</h3>
                                    <div class="field">
                                        <label>Temps de préparation</label>
                                        <input type="time" name='temps_preparation'>
                                    </div>
                                    <div class="field">
                                        <label>Temps de Repos</label>
                                        <input type="time" name='temps_repos'>
                                    </div>
                                    <div class="field">
                                        <label>Temps de Cuisson</label>
                                        <input type="time" name='temps_cuisson'>
                                    </div>
                                </div>
                                <h5>Commencer la recette *</h5>
                                <div class="field">
                                    <textarea name='text'></textarea>
                                </div>
                                <button class='ui button' type='submit'> Submit</button>

                            </div>
                        </form>
                    </div>
                    <%- include('../include/footer.ejs') %>